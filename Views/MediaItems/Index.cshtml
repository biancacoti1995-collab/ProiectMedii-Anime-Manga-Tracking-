@model IEnumerable<ProiectMedii_Anime___Manga_Tracking_.Models.MediaItem>

@{
    ViewData["Title"] = "Biblioteca mea Anime & Manga";
}

<div class="container" style="font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;">

    <div class="d-flex justify-content-between align-items-center my-4">
        <h1 style="color: #6A5ACD; font-weight: bold; text-shadow: 2px 2px #FFD1DC;">✨ My Anime & Manga Collection</h1>
        <a asp-action="Create" class="btn" style="background-color: #B2F2BB; border-radius: 15px; font-weight: bold; border: 2px solid #2D5A27;">+ Add New Entry</a>
    </div>

    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-md-4 col-lg-3 mb-4">
                <div class="card h-100 shadow-sm" style="border-radius: 20px; border: 3px solid #FFD1DC; background-color: #FFF9FB; transition: transform .2s;">

                    <div class="card-body text-center">
                        <div style="font-size: 40px; margin-bottom: 10px;">🌸</div> <h5 class="card-title" style="color: #6A5ACD; font-weight: bold;">@item.Title</h5>
                        <span class="badge rounded-pill mb-2" style="background-color: #AEC6CF; color: white; padding: 8px 15px;">@item.Type</span>

                        <p class="card-text text-muted" style="font-size: 0.9rem;">
                            <strong>Progress:</strong> @item.TotalVolumes Volumes/Episodes
                        </p>
                    </div>

                    <div class="card-footer bg-transparent border-0 pb-3">
                        <div class="d-flex justify-content-around">
                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm" style="background-color: #E0FBE2; border: 1px solid #B2F2BB;">Details</a>
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm" style="background-color: #FDFCF0; border: 1px solid #FFD1DC;">Edit</a>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm" style="background-color: #FFF0F5; border: 1px solid #FFB6C1;">Delete</a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<style>
    .card:hover {
        transform: scale(1.03);
        box-shadow: 0 10px 20px rgba(255, 209, 220, 0.5) !important;
    }
        
    body {
        background-color: #FDFCF0; 
    }
</style>